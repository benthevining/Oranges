{
  "buildPresets": [
    {
      "cleanFirst": true,
      "configuration": "Debug",
      "configurePreset": "default",
      "displayName": "The default build",
      "name": "default"
    },
    {
      "cleanFirst": true,
      "configurePreset": "default",
      "displayName": "Build the dependency graph image",
      "name": "deps_graph",
      "targets": "DependencyGraph"
    },
    {
      "displayName": "Maintainer build",
      "inherits": "default",
      "name": "maintainer",
      "verbose": true
    },
    {
      "cleanFirst": true,
      "configurePreset": "maintainer",
      "displayName": "Update the ReadMe with the list of all modules",
      "name": "readme",
      "targets": [
        "OrangesReadme",
        "DependencyGraph"
      ]
    }
  ],
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 22,
    "patch": 0
  },
  "configurePresets": [
    {
      "binaryDir": "${sourceDir}/Builds",
      "displayName": "The default CMake configuration",
      "name": "default",
      "warnings": {
        "unusedCli": false
      }
    },
    {
      "binaryDir": "${sourceDir}/Builds",
      "displayName": "CMake configuration for development of Oranges",
      "name": "maintainer",
      "warnings": {
        "deprecated": true,
        "dev": true,
        "uninitialized": true
      }
    }
  ],
  "testPresets": [
    {
      "configuration": "Debug",
      "configurePreset": "default",
      "execution": {
        "noTestsAction": "error"
      },
      "filter": {
        "include": {
          "name": "Oranges."
        }
      },
      "name": "default",
      "output": {
        "outputLogFile": "${sourceDir}/Builds/test_log.log",
        "outputOnFailure": true,
        "shortProgress": true,
        "verbosity": "verbose"
      }
    }
  ],
  "version": 3
}
