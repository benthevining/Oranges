{
  "dependencies": {
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "conventional-changelog-conventionalcommits": "^4.6.3",
    "semantic-release": "^19.0.2"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "section": "Bug Fixes",
                "type": "fix"
              },
              {
                "section": "Features",
                "type": "feat"
              },
              {
                "hidden": true,
                "type": "chore"
              },
              {
                "hidden": true,
                "type": "docs"
              },
              {
                "hidden": true,
                "type": "style"
              },
              {
                "hidden": true,
                "type": "refactor"
              },
              {
                "hidden": true,
                "type": "test"
              },
              {
                "hidden": true,
                "type": "ci"
              }
            ]
          }
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "section": "Bug Fixes",
                "type": "fix"
              },
              {
                "section": "Features",
                "type": "feat"
              },
              {
                "hidden": true,
                "type": "chore"
              },
              {
                "hidden": true,
                "type": "docs"
              },
              {
                "hidden": true,
                "type": "style"
              },
              {
                "hidden": true,
                "type": "refactor"
              },
              {
                "hidden": true,
                "type": "test"
              },
              {
                "hidden": true,
                "type": "ci"
              }
            ]
          }
        }
      ],
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md",
          "changelogTitle": "# Oranges changelog"
        }
      ],
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "bumpversion --allow-dirty --no-commit --no-tag --new-version \"${nextRelease.version}\" patch"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            ".bumpversion.cfg",
            "CMakeLists.txt",
            "conanfile.py"
          ]
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "label": "Changelog",
              "path": "CHANGELOG.md"
            }
          ]
        }
      ]
    ],
    "repositoryUrl": "http://github.com/benthevining/Oranges.git"
  }
}
